{
  "cSpell.words": [
    "Carmin",
    "Consolas",
    "Fabriga",
    "Pinia",
    "pohlcon",
    "styleguide",
    "styleguides",
    "stylelint",
    "uuid",
    "Verdegris",
    "vite",
    "vitest",
    "zeplin"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.stylelint": true,
    "source.organizeImports": true,
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript"
  ],
  "eslint.alwaysShowStatus": true,
  "stylelint.validate": [
    "css",
    "postcss",
    "scss",
    // "vue",
    "sass"
  ],
}