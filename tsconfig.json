{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "plugin-typings",
      "node",
      "jest",
      "vitest",
      "vite/client",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~typescript": [
        "api/typescript"
      ],
      "~typescript/*": [
        "api/typescript/*"
      ],
      "~zeplin": [
        "api/zeplin"
      ],
      "~zeplin/*": [
        "api/zeplin/*"
      ],
      "~api/*": [
        "api/*"
      ],
      "~shared/*": [
        "src/shared/*"
      ],
      "~comm/*": [
        "communication/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}